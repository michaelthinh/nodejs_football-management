<div class="container-fluid">
    <div class="row">


        {{>navbar}}
        <div class="col-sm min-vh-100" style="background-color:#FFF2FF">
            <div class="section_title">BẢNG XẾP HẠNG CẦU THỦ</div>
            <div class="mt-4" style="justify-content:right;align-items:right;text-align:right">
                <a href="/tournament-report">
                    <button class=" btn btn-primary check-all-submit-btn">Câu lạc bộ</button>
                </a>
                <a href="/tournament-report/sub">
                    <button class=" btn btn-primary check-all-submit-btn">Cầu thủ</button>
                </a>
            </div>
           <div class="mt-4 mb-4 text-center">
                <b>Kết quả hiện tại</b>
            </div>
            <table class="table mt-4">
                
                <thead style="text-align:center">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên cầu thủ</th>
                        <th scope="col">ID đội</th>
                        <th scope="col">Loại cầu thủ</th>
                        <th scope="col">Số bàn thắng</th>
                        
                    </tr>
                </thead>
                <tbody style="text-align:center">
                    {{#each players}}
                    <tr>
                        <td>{{sum @index 1}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.slugTeam}}</td>
                        <td>{{this.typePlayer}}</td>
                        <td>{{this.goals}}</td>
                    {{/each}}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

