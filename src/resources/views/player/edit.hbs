<div class="container-fluid">
    <div class="row">
        {{>navbar}}
        <div class=" col-sm min-vh-100" style="background-color:#FFF2FF">
            <div class="section_title">THÊM CẦU THỦ</div>
            <div class="container mt-4 align-items-center">
                <div class="row ">
                    <div class="col-md-10 mx-auto">
                        <form method="POST" action="/player/{{player.slugId}}?_method=PUT">
                            <div class="mb-3">
                                <label for="name" class="form-label">Tên cầu thủ</label>
                                <input type="text" class="form-control" value="{{player.name}}" id="name" name="name">
                            </div>
                             <div class="mb-3">
                                <label for="birthday" class="form-label">Ngày sinh</label>
                                <input type="text" class="form-control" value="{{player.birthday}}" id="birthday" name="birthday">
                            </div>
                            <div class="mb-3">
                                <label for="typePlayer" class="form-label">Loại cầu thủ</label>
                                <input type="text" class="form-control" value="{{player.typePlayer}}" id="typePlayer" name="typePlayer">
                            </div>
                            <div class="mb-3">
                                <label for="note" class="form-label">Ghi chú</label>
                                <input type="text" class="form-control" value="{{player.note}}" id="note" name="note">
                            </div>
                           
                           

                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary">Lưu lại</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>