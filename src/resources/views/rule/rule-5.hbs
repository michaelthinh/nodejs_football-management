<div class="container-fluid">
    <div class="row">
        {{>navbar}}
        <div class=" col-sm min-vh-100" style="background-color:#FFF2FF">
            <div class="section_title">{{rule.name}}</div>
            <div class="container mt-4 align-items-center">
                <div class="row ">
                    <div class="col mx-auto">
                        <form method="POST" action="/rule/{{rule.slug}}?_method=PUT">
                            <div class="mb-3">
                                <label for="winScore" class="form-label">Điểm đạt được sau trận thắng: </label>
                                <input type="text" class="form-control"  id="winScore" name="winScore" value="{{rule.winScore}}">
                            </div>
                            <div class="mb-3">
                                <label for="loseScore" class="form-label">Điểm đạt được sau trận thua: </label>
                                <input type="text" class="form-control"  id="loseScore" name="loseScore" value="{{rule.loseScore}}">
                            </div>
                            <div class="mb-3">
                                <label for="tieScore" class="form-label">Điểm đạt được sau trận hòa: </label>
                                <input type="text" class="form-control"  id="tieScore" name="tieScore" value="{{rule.tieScore}}">
                            </div>
                            <div class="mb-3 text-center fw-bold">
                                <p>Nội dung: {{rule.description}}</p>
                            </div>
                            
                           
                           

                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary">Lưu lại</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>